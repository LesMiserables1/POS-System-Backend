<!DOCTYPE html>
<html>
<body>

  <div class="page-header">
    <h2 style="float: left;">
      <span style="text-decoration: underline;">NOTA PENJUALAN</span>
    </h2>
    <table cellpadding="0" cellspacing="0" width="100%">
      <tr>
        <td>
          <b>No. Faktur:</b> 123<br>
          <b>Tanggal:</b> 20 Desember 2021<br>
          <b>Sales:</b> <%= user%>
        </td>
        <td colspan="4">
          <b>Toko: </b>  <%= tokoName%><br>
          <b>Telp: </b>  <%= noTelp%><br>
          <b>Alamat: </b> <%= address%>
        </td>
      </tr>
    </table>
  </div>

  <div class="page-footer">
    <table cellpadding="0" cellspacing="0" width="100%">
      <tr>
        <td>
          <b>Penerima</b><br><br><br>
          <p>______________________</p>
        </td>
        <td colspan="4">
          <td>
            <b>Penjual</b><br><br><br>
            <p>______________________</p>
          </td>
        </td>
      </tr>
    </table>
  </div>
  <div class="invoice-box">
    <table>
      <thead>
        <tr>
          <td>
            <!--place holder for the fixed-position header-->
            <div class="page-header-space"></div>
          </td>
        </tr>
      </thead>
      <tbody>
        <div class="page">
          <tr class="heading">
              <td>
                Qty
              </td>
              <td>
                Nama Barang
              </td>
              <td>
                Harga
              </td>
              <td>
                Total
              </td>
          </tr>
          <% for(var t in transaction) { %>
            <tr class="item">
              <td>
                <%=  transaction[t].qty %>
              </td>
              <td>
                <%=  transaction[t].name %>
              </td>
              <td>
                Rp. <%=   transaction[t].sellingPrice %>
              </td>
              <td>
                Rp. <%=   transaction[t].totalPriceQty %>
              </td>
            </tr>
          <% } %>
          <% for(var t in transaction) { %>
            <tr class="item">
              <td>
                <%=  transaction[t].qty %>
              </td>
              <td>
                <%=  transaction[t].name %>
              </td>
              <td>
                Rp. <%=   transaction[t].sellingPrice %>
              </td>
              <td>
                Rp. <%=   transaction[t].totalPriceQty %>
              </td>
            </tr>
          <% } %>
          <tr class="item" style="background-color:LightGray">
          
            <td colspan="3" style="border-bottom: 2px solid rgb(123, 123, 143)">
            </td>
            <td style="border-bottom: 2px solid rgb(123, 123, 143);text-align: left;">
              Rp. <%= totalPrice %>
            </td>
          </tr>
        </div>
      </tbody>
      <tfoot>
        <tr>
          <td>
            <!--place holder for the fixed-position footer-->
            <div class="page-footer-space"></div>
          </td>
        </tr>
      </tfoot>
    </table>
  </div>
</body>
</html>
